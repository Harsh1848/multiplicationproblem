<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="multiplicationproblem.MainPage">

    <StackLayout Padding="20">
        <Label Text="Enter a number (-50 to 50):" FontSize="16" />
        <Entry x:Name="NumberEntry" Keyboard="Numeric" />

        <Label Text="Enter upper limit (optional):" FontSize="16" />
        <Entry x:Name="UpperLimitEntry" Keyboard="Numeric" />

        <Button Text="Generate Table" Clicked="GenerateTableButton_Clicked" />

        <Label x:Name="TableLabel" Text="" FontSize="16" />
    </StackLayout>

</ContentPage>
